<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MiPrimeraAppWinUI.Inventario"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MiPrimeraAppWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:primitives="using:CommunityToolkit.WinUI.UI.Controls.Primitives"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="125"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="/Assets/FondoSuperior.png"
        Stretch="Fill"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Grid.Row="0"/>

        <TextBlock Text="INVENTARIO"
        FontFamily="Cooper Black"
        FontSize="40"
        FontWeight="Bold"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"
        Grid.Row="0"
        Foreground="Black"
        Margin="0,0,60,0"/>

        <Image Source="/Assets/flecha-izquierda.png"
        Stretch="Fill"
        Height="50"
        Width="50"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Grid.Row="0"
        Margin="20,0,0,0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="PRODUCTOS"
                    FontFamily="Ebrima"
                    FontSize="25"
                    FontWeight="Bold"
                    TextAlignment="Center"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.Row="0"
                    Foreground="Black"
                    Margin="0,20,0,0"
                     />

                <TextBox
                    x:Name="txtBuscar"
                    PlaceholderText="Buscar producto"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="20,0,20,0"
                    Grid.Row="1"
                    />

                <controls:DataGrid
                        Grid.Row="2"
                        x:Name="DGInventario"
                        AutoGenerateColumns="False"
                        HeadersVisibility="All"
                        GridLinesVisibility="All"
                        Margin="0,0,20,20">

                    <!-- AquÃ­ centramos TODOS los encabezados -->
                    <controls:DataGrid.ColumnHeaderStyle>
                        <Style TargetType="primitives:DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </controls:DataGrid.ColumnHeaderStyle>

                    <controls:DataGrid.Columns>

                        <controls:DataGridTemplateColumn Header="Num" Width="75">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ID}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        TextAlignment="Center"/>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>

                        <!-- Producto -->
                        <controls:DataGridTemplateColumn Header="Producto" Width="*">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Producto}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextAlignment="Center"/>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>

                        <!-- Cantidad -->
                        <controls:DataGridTemplateColumn Header="Tipo" Width="*">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Tipo}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextAlignment="Center"/>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>

                        <!-- Caducidad (texto centrado en la celda) -->
                        <controls:DataGridTemplateColumn Header="Caducidad" Width="*">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Caducidad}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextAlignment="Center"/>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>

                        <controls:DataGridTemplateColumn Header="Cantidad" Width="100">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Cantidad}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextAlignment="Center"/>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>

                        <!-- Editar -->
                        <controls:DataGridTemplateColumn Header="Editar" Width="90">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Width="60" Height="60" CornerRadius="30">
                                        <Image Source="/Assets/editar.png"
                            Width="60" Height="60"
                            Stretch="UniformToFill"/>
                                    </Border>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>

                        <!-- Eliminar -->
                        <controls:DataGridTemplateColumn Header="Eliminar" Width="90">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Width="60" Height="60" CornerRadius="30">
                                        <Image Source="/Assets/eliminar.png"
                            Width="60" Height="60"
                            Stretch="UniformToFill"/>
                                    </Border>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>

            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="7*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Name="txtEncabeAddInvent"
                        FontFamily="Ebrima"
                        FontSize="25"
                        FontWeight="Bold"
                        TextAlignment="Center"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Foreground="Black"
                        Margin="0,0,0,0"
                        />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="NOMBRE:"
                        FontFamily="Ebrima"
                        FontSize="22"
                        FontWeight="SemiBold"
                        TextAlignment="Center"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        />

                    <TextBox Grid.Row="1" Grid.Column="1" 
                        PlaceholderText="Inserta Nombre"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="10,0,30,0"
                        />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="CANTIDAD:"
                        FontFamily="Ebrima"
                        FontSize="22"
                        FontWeight="SemiBold"
                        TextAlignment="Center"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        />

                    <TextBox Grid.Row="2" Grid.Column="1" 
                        PlaceholderText="Inserta Cantidad"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="10,0,30,0"
                        />

                    <TextBlock Grid.Row="3" Grid.Column="1" Text="Â¿APLICA CADUCIDAD?"
                        FontFamily="Ebrima"
                        FontSize="22"
                        FontWeight="SemiBold"
                        TextAlignment="Center"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,0,30,0"
                        />

                    <ToggleSwitch Grid.Row="4" Grid.Column="1"
                        Name="tsCaducidad"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Ebrima"
                        FontSize="20"
                        FontWeight="Normal"
                        OffContent="NO" 
                        OnContent="SI" 
                        Toggled="ToggleSwitch_Toggled"
                        Margin="30,0,0,0"
                        />

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="CADUCIDAD:"
                        Name="txtCaducidad"
                        FontFamily="Ebrima"
                        FontSize="22"
                        FontWeight="SemiBold"
                        TextAlignment="Center"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        />

                    <DatePicker Grid.Row="5" Grid.Column="1" 
                        Name="dtpCaducidad"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="10,0,30,0"
                        />

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="TIPO:"
                        FontFamily="Ebrima"
                        FontSize="22"
                        FontWeight="SemiBold"
                        TextAlignment="Center"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        />

                    <ComboBox Grid.Row="6" Grid.Column="1"
                        PlaceholderText="Selecciona Tipo"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="10,0,30,0"
                        >
                        <ComboBoxItem Content="PALETAS"/>
                        <ComboBoxItem Content="NIEVE"/>
                        <ComboBoxItem Content="TROLES"/>
                        <ComboBoxItem Content="FRESAS C/CREMA"/>
                        <ComboBoxItem Content="REFRESCO"/>
                    </ComboBox>

                    <Button Grid.Row="7" Grid.Column="1" Name="btnGuardar"
                        Content="Guardar"
                        Click="btnGuardar_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Blue"
                        Foreground="White"
                        Margin="0,0,30,0"
                        />


                </Grid>
                
            </Grid>
            
            
        </Grid>

    </Grid>
</Page>
