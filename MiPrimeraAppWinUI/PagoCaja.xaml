<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MiPrimeraAppWinUI.PagoCaja"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MiPrimeraAppWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="4.8*"/>
        </Grid.ColumnDefinitions>

        <TextBlock 
        Text="PAGO MONEDAS"
        FontSize="18"
        FontWeight="Bold"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Grid.Row="0"
        Grid.ColumnSpan="4"
    />

        <Button 
        Content="$1"
        Name="btn1"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Grid.Row="1"
        Grid.Column="0"
        Background="LightGreen"
        Click="btn1_Click"
    />

        <Button 
        Content="$2"
        Name="btn2"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Grid.Row="1"
        Grid.Column="1"
        Background="LightGreen"
        Click="btn2_Click"
    />

        <Button 
        Content="$5"
        Name="btn5"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Grid.Row="1"
        Grid.Column="2"
        Background="LightGreen"
        Click="btn5_Click"
    />

        <Button 
        Content="$10"
        Name="btn10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Grid.Row="1"
        Grid.Column="3"
        Background="LightGreen"
        Click="btn10_Click"
    />

        <TextBlock 
        Text="PAGO BILLETES"
        FontSize="18"
        FontWeight="Bold"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Grid.Row="2"
        Grid.ColumnSpan="4"
    />

        <Button 
        Content="$20"
        Name="btn20"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Grid.Row="3"
        Grid.Column="0"
        Background="LightGreen"
        Click="btn20_Click"
    />

        <Button 
        Content="$50"
        Name="btn50"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Grid.Row="3"
        Grid.Column="1"
        Background="LightGreen"
        Click="btn50_Click"
    />

        <Button 
        Content="$100"
        Name="btn100"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Grid.Row="3"
        Grid.Column="2"
        Background="LightGreen"
        Click="btn100_Click"
    />

        <Button 
        Content="$200"
        Name="btn200"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Grid.Row="3"
        Grid.Column="3"
        Background="LightGreen"
        Click="btn200_Click"
    />

        <Button 
        Content="$500"
        Name="btn500"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Grid.Row="4"
        Grid.Column="0"
        Grid.ColumnSpan="2"
        Background="LightGreen"
        Click="btn500_Click"
    />

        <Button 
        Content="$1,000"
        Name="btn1000"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Grid.Row="4"
        Grid.Column="2"
        Grid.ColumnSpan="2"
        Background="LightGreen"
        Click="btn1000_Click"
    />

        <TextBlock 
        Text="CANTIDAD"
        FontSize="18"
        FontWeight="Bold"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Grid.Row="0"
        Grid.Column="4"
    />

        <TextBlock
        Name="lblCantidad"
        FontSize="30"
        FontWeight="Bold"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Grid.Row="1"
        Grid.Column="4"
    />

        <TextBox 
        Name="txtCantidad"
        TextChanged="txtCantidad_TextChanged"
        Margin="10,0,0,0"
        PlaceholderText="Inserta Cantidad"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Grid.Row="2"
        Grid.Column="4"
        FontSize="15"
        TextAlignment="Center"
        />

        <Grid Grid.Row="3" Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock 
                Text="TOTAL"
                FontSize="22"
                Foreground="Blue"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="0"
            />

            <TextBlock 
                Name="lblTotal"
                FontSize="22"
                FontWeight="Bold"
                Foreground="Blue"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="1"
            />

        </Grid>

        <Grid Grid.Row="4" Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock 
                Text="CAMBIO"
                FontSize="25"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="0"
            />

            <TextBlock
                Name="lblcambio"
                FontSize="30"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="1"
            />

        </Grid>
        
        

    </Grid>


</UserControl>
