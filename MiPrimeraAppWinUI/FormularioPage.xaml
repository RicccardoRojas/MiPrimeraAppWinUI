<Page
    x:Class="MiPrimeraAppWinUI.FormularioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MiPrimeraAppWinUI">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="125"/>
            <!-- Contenedor Contenido -->
            <RowDefinition Height="40"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="/Assets/FondoSuperior.png"
                Stretch="Fill"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Grid.Row="0"/>

        <TextBlock Text="VENTA"
                FontFamily="Cooper Black"
                FontSize="40"
                FontWeight="Bold"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Grid.Row="0"
                Foreground="Black"
                Margin="0,0,60,0"/>

        <Image Source="/Assets/flecha-izquierda.png"
                Stretch="Fill"
                Height="50"
                Width="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Grid.Row="0"
                Margin="20,0,0,0"/>

        <!-- Titulos -->

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- COLUMNA 1 -->


            <TextBlock Text="PRODUCTOS"
                    FontFamily="Ebrima"
                    FontSize="25"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.Row="1"
                    Foreground="Black"
                    Margin="0,20,0,0"
                    Grid.Column="0"
                           />

            <TextBlock Text="DESCRIPCION"
                    FontFamily="Ebrima"
                    FontSize="25"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.Row="1"
                    Foreground="Black"
                    Margin="0,20,0,0"
                    Grid.Column="1"
                    />

        </Grid>


        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <!-- TextBox -->
                    <RowDefinition Height="*"/>
                    <!-- ScrollViewer -->
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- TextBox fijo arriba -->
                <TextBox
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="30,10,30,0"
                    Height="20"
                    PlaceholderText="Nombre del producto"/>

                <!-- Scroll de los botones -->
                <ScrollViewer Grid.Row="1" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Primera Columna -->
                        <local:BotonProductos Grid.Row="0" Grid.Column="0" />
                        <local:BotonProductos Grid.Row="1" Grid.Column="0" />
                        <local:BotonProductos Grid.Row="2" Grid.Column="0" />
                        <local:BotonProductos Grid.Row="3" Grid.Column="0" />
                        <local:BotonProductos Grid.Row="4" Grid.Column="0" />

                        <!-- Segunda Columna -->
                        <local:BotonProductos Grid.Row="0" Grid.Column="1" />
                        <local:BotonProductos Grid.Row="1" Grid.Column="1" />
                        <local:BotonProductos Grid.Row="2" Grid.Column="1" />
                        <local:BotonProductos Grid.Row="3" Grid.Column="1" />
                        <local:BotonProductos Grid.Row="4" Grid.Column="1" />

                        <!-- Tercera Columna -->
                        <local:BotonProductos Grid.Row="0" Grid.Column="2" />
                        <local:BotonProductos Grid.Row="1" Grid.Column="2" />
                        <local:BotonProductos Grid.Row="2" Grid.Column="2" />
                        <local:BotonProductos Grid.Row="3" Grid.Column="2" />
                        <local:BotonProductos Grid.Row="4" Grid.Column="2" />
                    </Grid>
                </ScrollViewer>

            </Grid>



            <!-- COLUMNA DESCRIPCION -->

            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="250"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="150" MaxWidth="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="1" Grid.Column="0" 
                        Text="PRODUCTO:"
                        FontFamily="Ebrima"
                        FontSize="25"
                        FontWeight="Normal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"/>


                    <TextBlock Grid.Row="1" Grid.Column="1" 
                        Text="HELADO DOBLE"
                        FontFamily="Ebrima"
                        FontSize="25"
                        FontWeight="Bold"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" 
                        Text="SABOR:"
                        FontFamily="Ebrima"
                        FontSize="25"
                        FontWeight="Normal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"/>


                    <ComboBox Grid.Row="2" Grid.Column="1" PlaceholderText="Escoge el Sabor" 
                        FontFamily="Ebrima"
                        FontSize="25"
                        FontWeight="Bold"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0">

                        <ComboBoxItem Content="Gansito"/>
                        <ComboBoxItem Content="Chocolate"/>
                        <ComboBoxItem Content="Vainilla"/>
                        <ComboBoxItem Content="Queso"/>
                        <ComboBoxItem Content="Oreo"/>
                        <ComboBoxItem Content="Cafe"/>
                        <ComboBoxItem Content="Fresas con Crema"/>
                        <ComboBoxItem Content="Limon"/>
                        <ComboBoxItem Content="Frutos Secos"/>
                        <ComboBoxItem Content="Fresa"/>
                        <ComboBoxItem Content="Fresa de Agua"/>
                        
                    </ComboBox>

                    <TextBlock Grid.Row="3" Grid.Column="0" 
                        Text="PRECIO:"
                        FontFamily="Ebrima"
                        FontSize="25"
                        FontWeight="Normal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"/>


                    <TextBlock Grid.Row="3" Grid.Column="1" 
                        Text="$20.00"
                        FontFamily="Ebrima"
                        FontSize="25"
                        FontWeight="Bold"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"/>

                    <TextBlock Grid.Row="4" Grid.Column="0"
                        Text="CANTIDAD:"
                        FontFamily="Ebrima"
                        FontSize="25"
                        FontWeight="Normal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"      
                               />

                    <Grid Grid.Row="4" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition MinWidth="30" MaxWidth="250"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions>

                        <Border Name="btnMenos"
                            PointerEntered="btnCantidad_PointerEntered"
                            PointerExited="btnCantidad_PointerExited"
                            Tapped="btnMenos_Tapped"
                            Grid.Row="0"  Grid.Column="0"
                            Width="46"
                            Height="46"
                            CornerRadius="23"
                            Background="LightGray"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            BorderThickness="0">

                            <Image
                                Source="/Assets/signo-menos.png"
                                Stretch="UniformToFill"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                />
                        </Border>

                        <TextBox
                            MinWidth="30" MaxWidth="250"
                            Name="txtCantidad"
                            Text="1"
                            InputScope="Number"
                            TextChanged="txtCantidad_TextChanged"
                            FontFamily="Ebrima"
                            FontSize="25"
                            FontWeight="Bold"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Margin="10,0,10,0"
                            TextAlignment="Center"
                            Grid.Row="0"
                            Grid.Column="1"/>



                        <Border Name="btnMas"
                            PointerEntered="btnCantidad_PointerEntered"
                            PointerExited="btnCantidad_PointerExited"
                            Tapped="btnMas_Tapped"
                            Grid.Row="0"  Grid.Column="2"
                            Width="46"
                            Height="46"
                            CornerRadius="23"
                            Background="LightGray"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            BorderThickness="0">

                            <Image
                                Source="/Assets/signo-de-mas.png"
                                Stretch="UniformToFill"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                />
                        </Border>

                        <Border Name="btnVerificar"
                            PointerEntered="btnCantidad_PointerEntered"
                            PointerExited="btnCantidad_PointerExited"
                            Tapped="btnMas_Tapped"
                            Grid.Row="0"  Grid.Column="3"
                            Width="46"
                            Height="46"
                            CornerRadius="23"
                            Background="LightGray"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="40,0,0,0"
                            BorderThickness="0">

                            <Image
                                Source="/Assets/comprobado.png"
                                Stretch="UniformToFill"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                />
                        </Border>


                    </Grid>
                    

                </Grid>

                <Grid Grid.Row="1" Margin="0,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="7"
                        Text="CARRITO"
                        FontFamily="Ebrima"
                        FontSize="25"
                        FontWeight="Normal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="1"
                        Grid.Column="1"
                        Text="PRODUCTO"
                        FontFamily="Ebrima"
                        FontSize="22"
                        FontWeight="Normal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="1"
                        Grid.Column="2"
                        Text="SABOR"
                        FontFamily="Ebrima"
                        FontSize="22"
                        FontWeight="Normal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="1"
                        Grid.Column="3"
                        Text="P/U"
                        FontFamily="Ebrima"
                        FontSize="22"
                        FontWeight="Normal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="1"
                        Grid.Column="4"
                        Text="CANTIDAD"
                        FontFamily="Ebrima"
                        FontSize="22"
                        FontWeight="Normal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="1"
                        Grid.Column="5"
                        Text="SUBTOTAL"
                        FontFamily="Ebrima"
                        FontSize="22"
                        FontWeight="Normal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                </Grid>

                <ScrollViewer Grid.Row="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="90"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>


                    <Border Grid.Row="0" Grid.ColumnSpan="7" Background="LightGray" CornerRadius="5" Margin="10,10,10,1"/>

                        <Border Grid.Row="0" Grid.Column="0" Background="LightSkyBlue" CornerRadius="5" Margin="10,10,10,1" >
                            <Image
                                Source="/Assets/helado.png"
                                Stretch="Uniform"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                >
                            </Image>
                        </Border>

                        <TextBlock Grid.Row="0" Grid.Column="1" Text="HELADO DOBLE" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="GANSITO" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="$40.00" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="4" Text="2" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="5" Text="$80.00" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <Grid Grid.Row="0" Grid.Column="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25" Margin="0,0,10,0">
                                <Image
                                    Source="/Assets/editar.png"
                                    Stretch="Uniform"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                </Image>
                            </Border>


                            <Border Grid.Column="1" Width="50" Height="50" CornerRadius="25" Margin="0,0,10,0">
                                <Image
                                    Source="/Assets/eliminar.png"
                                    Stretch="Uniform"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    >
                                </Image>
                            </Border>
                        </Grid>




                    <Border Grid.Row="1" Grid.ColumnSpan="7" Background="LightGray" CornerRadius="5" Margin="10,10,10,1"/>

                        <Border Grid.Row="1" Grid.Column="0" Background="LightSkyBlue" CornerRadius="5" Margin="10,10,10,1" >
                            <Image
                                Source="/Assets/helado-menu.png"
                                Stretch="Uniform"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                >
                            </Image>
                        </Border>

                        <TextBlock Grid.Row="1" Grid.Column="1" Text="HELADO DOBLE" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="GANSITO" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="$40.00" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="4" Text="2" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="5" Text="$80.00" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <Grid Grid.Row="1" Grid.Column="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25" Margin="0,0,10,0">
                                <Image
                                    Source="/Assets/editar.png"
                                    Stretch="Uniform"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                </Image>
                            </Border>


                            <Border Grid.Column="1" Width="50" Height="50" CornerRadius="25" Margin="0,0,10,0">
                                <Image
                                    Source="/Assets/eliminar.png"
                                    Stretch="Uniform"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    >
                                </Image>
                            </Border>
                        </Grid>



                        <Border Grid.Row="2" Grid.ColumnSpan="7" Background="LightGray" CornerRadius="5" Margin="10,10,10,1"/>
                    <Border Grid.Row="3" Grid.ColumnSpan="7" Background="LightGray" CornerRadius="5" Margin="10,10,10,1"/>
                    <Border Grid.Row="4" Grid.ColumnSpan="7" Background="LightGray" CornerRadius="5" Margin="10,10,10,1"/>
                    <Border Grid.Row="5" Grid.ColumnSpan="7" Background="LightGray" CornerRadius="5" Margin="10,10,10,1"/>

                </Grid>
                </ScrollViewer>

            </Grid>


        </Grid>

    </Grid>
</Page>
