<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MiPrimeraAppWinUI.ListaCarrito"
    x:Name="Carrito"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MiPrimeraAppWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Height="90">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="7" Background="LightGray" CornerRadius="5" Margin="10,0,10,10"/>

        <Border Grid.Column="0" Background="LightSkyBlue" CornerRadius="5" Margin="10,0,10,10">
            <Image
                Source="{Binding Imagen, ElementName=Carrito}"
                Stretch="Uniform"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </Border>

        <TextBlock Grid.Column="1" Text="{Binding Nombre, ElementName=Carrito}" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10"/>
        <TextBlock Grid.Column="2" Text="{Binding Descripcion, ElementName=Carrito}" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10"/>
        <TextBlock Grid.Column="3" Text="{Binding Precio, ElementName=Carrito}" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10"/>
        <TextBlock Grid.Column="4" Text="{Binding Cantidad, ElementName=Carrito}" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10"/>
        <TextBlock Name="txtSubTotal" Grid.Column="5" Text="{Binding Total, ElementName=Carrito}" FontFamily="Ebrima" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10"/>

        <Grid Grid.Column="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25" Margin="0,0,10,10" PointerEntered="Botones_PointerEntered" PointerExited="Botones_PointerExited">
                <Image
                    Source="/Assets/editar.png"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </Border>

            <Border Name="btnEliminar" Grid.Column="1" Width="50" Height="50" CornerRadius="25" Margin="0,0,10,10" 
                    PointerEntered="Botones_PointerEntered" PointerExited="Botones_PointerExited"
                    Tapped="btnEliminar_Tapped"
                    >
                <Image
                    Source="/Assets/eliminar.png"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </Border>
        </Grid>
    </Grid>
</UserControl>
