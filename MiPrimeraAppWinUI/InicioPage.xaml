<Page
    x:Class="MiPrimeraAppWinUI.InicioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MiPrimeraAppWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="350"/>
            <!-- Imagen y texto -->
            <RowDefinition Height="*"/>
            <!-- Botones -->
            <RowDefinition Height="*"/>
            <!-- Para el resto, si querés -->
        </Grid.RowDefinitions>

        <!-- Imagen -->
        <Image Source="ms-appx:///Assets/portada.png"
               Stretch="Fill"
               Height="315"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Grid.Row="0"/>


        <Border Width="76"
            Height="76"
            CornerRadius="38"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="20,20,0,0"
            Background="White"
            PointerEntered="ButtonClosed_PointerEntered"
            PointerExited="ButtonClosed_PointerExited"
            Tapped="Cerrar_App"
                >
            <Image Source="ms-appx:///Assets/cerrado.png"
                Stretch="UniformToFill"/>
            
        </Border>

        <!-- Texto sobre la imagen -->
        <TextBlock Text="¡Bienvenido!"
                   FontSize="36"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Foreground="White"
                   Margin="0"/>

        <Border Width="250"
            Height="250"
            CornerRadius="125"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,20,50,0"
            Background="White">
            <Image Source="ms-appx:///Assets/Logo Paleteria Real Rojas.png"
               Stretch="UniformToFill"/>
        </Border>

        <!-- Contenedor de botones en fila -->
        <Grid Grid.Row="1" Margin="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- FancyButton para VENTA -->
            <local:FancyButton Grid.Column="0" Margin="10" BackgroundImage="/Assets/venta.jpg" IconImage="/Assets/helado.png" Text="VENTA" />
            <local:FancyButton Grid.Column="1" Margin="10" BackgroundImage="/Assets/inventario.jpg" IconImage="/Assets/inventario.png" Text="INVENTARIO" />
            <local:FancyButton Grid.Column="2" Margin="10" BackgroundImage="/Assets/gastos.png" IconImage="/Assets/las-compras-en-linea.png" Text="GASTOS" />

        </Grid>


        <Grid Grid.Row="2" Margin="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <local:FancyButton Grid.Column="0" Margin="10" BackgroundImage="/Assets/registroventa.jpg" IconImage="/Assets/caja-registradora.png" Text="REGISTRO VENTAS" />
            <local:FancyButton Grid.Column="1" Margin="10" BackgroundImage="/Assets/productos.jpg" IconImage="/Assets/helado-menu.png" Text="PRODUCTOS" />
            <local:FancyButton Grid.Column="2" Margin="10" BackgroundImage="/Assets/recordatorios.jpg" IconImage="/Assets/recordatorio.png" Text="RECORDATORIOS" />
            
        </Grid>


    </Grid>
</Page>
