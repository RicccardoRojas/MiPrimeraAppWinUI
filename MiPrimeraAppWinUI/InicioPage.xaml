<Page
    x:Class="MiPrimeraAppWinUI.InicioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MiPrimeraAppWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <!-- Imagen y texto -->
            <RowDefinition Height="*"/>
            <!-- Botones -->
            <RowDefinition Height="*"/>
            <!-- Para el resto, si querés -->
        </Grid.RowDefinitions>

        <!-- Imagen -->
        <Image Source="ms-appx:///Assets/portada.png"
               Stretch="Fill"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Grid.Row="0"/>

        <!-- Texto sobre la imagen -->
        <TextBlock Text="¡Bienvenido!"
                   FontSize="36"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Foreground="White"
                   Margin="0"/>

        <!-- Contenedor de botones en fila -->
        <Grid Grid.Row="1" Margin="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
        Margin="10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        BorderThickness="0"
        Background="Transparent"
        PointerEntered="Button_PointerEntered"
        PointerExited="Button_PointerExited">
                <Grid>
                    <!-- Imagen que se escalará (fondo) -->
                    <Image x:Name="BackgroundImage"
               Source="/Assets/venta.jpg"
               Stretch="Fill"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               RenderTransformOrigin="0.5,0.5"
               Opacity="0.5">
                        <Image.RenderTransform>
                            <ScaleTransform x:Name="ImageScale" ScaleX="1.2" ScaleY="1.2"/>
                        </Image.RenderTransform>
                    </Image>

                    <!-- Imagen para el ícono (arriba, encima de la imagen de fondo) -->
                    <Image x:Name="IconImage"
               Source="/Assets/helado.png"
               Width="120"
               Height="120"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="0,0,0,40"/>
                    <!-- Ajusta el margen para colocarlo arriba -->

                    <!-- Contenido debajo del ícono (texto), sobre la imagen de fondo -->
                    <TextBlock Text="VENTA"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Foreground="Black"
                  FontFamily="Impact"
                  FontSize="35"
                  FontWeight="Medium"
                  Margin="0,120,0,0"/>
                    <!-- Ajusta el margen para colocarlo debajo del ícono -->
                </Grid>
            </Button>


            <Button Content="Botón 2"
                Grid.Column="1"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Salmon"/>

            <Button Content="Botón 3"
                Grid.Column="2"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="LightGreen"/>
            
        </Grid>

        <Grid Grid.Row="2" Margin="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Button Content="Botón 1"
                Grid.Column="0"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Aqua"/>


            <Button Content="Botón 2"
                Grid.Column="1"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="SaddleBrown"/>

            <Button Content="Botón 3"
                Grid.Column="2"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                 Background="LightGreen"/>
        </Grid>


    </Grid>
</Page>
